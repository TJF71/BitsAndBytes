    <div class="sidebar-inner">

        <!-- Start Single Widget  -->
        <div class="axil-single-widget widget widget_categories mb--30">
            <ul>
                @foreach (Category category in (await _BlogService.GetCategoriesAsync()).Take(4))
                {
                <li class="cat-item">
                    <a href="#" class="inner">
                        <div class="thumbnail">
                        <img src="@_ImageService.ConvertByteArrayToFile(category?.ImageData, category?.ImageType, DefaultImage.CategoryImage)" alt="">
                        </div>
                        <div class="content">
                            <h5 class="title">Tech</h5>
                        </div>
                    </a>
                </li>
                }
            </ul>
        </div>
