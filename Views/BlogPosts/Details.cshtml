@model Blog.Models.BlogPost
@inject IImageService _ImageService

@{
    ViewData["Title"] = "Details";
}

<style>
    .ck-editor__editable_inline {
        min-height: 600px;
    }

    input.largerCheckbox {
        width: 30px;
        height: 30px;
    }

    label.form-check-label {
        font-size: 22px;
    }
</style>


<!-- Start Post Single Wrapper  -->
<div class="post-single-wrapper axil-section-gap bg-color-white">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <!-- Start Banner Area -->
                <div class="banner banner-single-post post-formate post-layout pb--40">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12">
                                <!-- Start Single Slide  -->
                                <div class="content-block">
                                    <!-- Start Post Content  -->
                                    <div class="post-content">
                                        <div class="post-cat">
                                            <div class="post-cat-list">
                                                <a class="hover-flip-item-wrapper" href="#">
                                                    <span class="hover-flip-item">
                                                        <span data-text="@Model.Category?.Name">[Category]</span>
                                                        @Model?.Category
                                                    </span>
                                                </a>
                                            </div>
                                        </div>




                                        <h1 class="title">
                                            @Model?.Title
                                            @*  @Html.DisplayNameFor(model => model.Title) *@  @*This just displayed the word "Title"*@
                                        </h1>
                                        <!-- Post Meta  -->
                                        <div class="post-meta-wrapper">
                                            <div class="post-meta">
                                                <div class="post-author-avatar border-rounded">
                                                    @* [Your Image] *@
                                                    <img src="@_ImageService.ConvertByteArrayToFile(null, null, DefaultImage.BlogUserImage)" alt="Author Images"
                                                         style="height:80px;width:80px">
                                                </div>
                                                <div class="content">
                                                    <h6 class="post-author-name">
                                                        <a class="hover-flip-item-wrapper" href="author.html">
                                                            <span class="hover-flip-item">

                                                                <span data-text="">[Name]</span>

                                                                @*                                                                 <span class="hover-flip-item">
                                                                <span data-text="@Model.BlogUser?.FullName">[Category]</span>
                                                                @Model?.BlogUser
                                                                </span> *@



                                                            </span>
                                                        </a>
                                                    </h6>
                                                    <ul class="post-meta-list">
                                                        <li>@Model?.CreatedDate.ToString("MMM dd, yyyy")</li>
                                                        <li>@Model?.Comments.Count</li>
                                                    </ul>
                                                </div>
                                            </div>
                                            <ul class="social-share-transparent justify-content-end">
                                                <li><a href="#"><i class="fab fa-facebook-f"></i></a></li>
                                                @*                                                 <li><a href="#"><i class="fab fa-instagram"></i></a></li>
                                                <li><a href="#"><i class="fab fa-twitter"></i></a></li> *@
                                                <li><a href="#"><i class="fas fa-link"></i></a></li>
                                            </ul>
                                        </div>
                                    </div>
                                    <!-- End Post Content  -->
                                </div>
                                <!-- End Single Slide  -->
                            </div>
                        </div>
                    </div>
                </div>
                <!-- End Banner Area -->
                <!-- Start Blog Details  -->
                <div class="axil-post-details">
                    <p class="has-medium-font-size">
                        <!--Abstract here-->
                        @*          [Abstract] *@
                        @Model?.Abstract
                    </p>
                    <figure class="wp-block-image alignwide text-center">
                        <!--Blog Image here-->
                        @* [Image] *@

                        <input asp-for="ImageFile" type="file" class="form-control mt-3 pt-2" accept=".png,.jpg,.jpeg,.gif"
                               onchange="document.getElementById('blogImage').src = window.URL.createObjectURL(this.files[0])" />

                        <img src="@_ImageService.ConvertByteArrayToFile(null, null, DefaultImage.AuthorImage)"
                             alt="Show the blog's Image here or a default Image" style="height:120px;width:120px" />


                        @*                         <img src="@_ImageService.ConvertByteArrayToFile(null, null, DefaultImage.AuthorImage)" alt="Author Images"
                        style="height:80px;width:80px"> *@

                    </figure>

                    @*    [Blog Content] *@
                    @Model?.Content

                    <div class="">
                        <!--Tags listed here-->
                        @*  [Tags] *@
                        <a href="#">Tag1</a>
                        <a href="#">Tag2</a>
                        <a href="#">Tag3</a>
                        <a href="#">Tag4</a>

                        @Model?.Tags


                    </div>
                    <div class="social-share-block">
                        <div class="post-like">
                            <a id="likesButton">
                                <i id="faThumb" class="fal fa-thumbs-up" style="background-color:#ff993b;color:white;border-color:white"></i>
                                <span id="numLikes">0 Likes</span>
                            </a>
                        </div>
                        <ul class="social-icon icon-rounded-transparent md-size">
                            <li><a href="#"><i class="fab fa-facebook-f"></i></a></li>
                            @*                             <li><a href="#"><i class="fab fa-instagram"></i></a></li>
                            <li><a href="#"><i class="fab fa-twitter"></i></a></li> *@
                            <li><a href="#"><i class="fab fa-linkedin-in"></i></a></li>
                        </ul>
                    </div>
                    <!-- Start Author  -->
                    <div class="about-author">
                        <div class="media">
                            <div class="thumbnail">
                                <a href="#">
                                    <img src="" alt="Author Images" style="height:120px;width:120px">
                                </a>
                            </div>
                            <div class="media-body">
                                <div class="author-info">
                                    <h5 class="title">
                                        <a class="hover-flip-item-wrapper" href="#">
                                            <span class="hover-flip-item">
                                                <span data-text="[Your Name]">[Your Name] </span>
                                            </span>
                                        </a>
                                    </h5>
                                    <span class="b3 subtitle">Software Developer</span>
                                </div>
                                <div class="content">
                                    <p class="b1 description">
                                        I'm a coder, you're a coder, he's a coder, she's a coder ... wouldn't you like to be a coder too!?
                                    </p>
                                    <ul class="social-share-transparent size-md">
                                        <li><a href="#"><i class="fab fa-facebook-f"></i></a></li>
                                        @*                                         <li><a href="#"><i class="fab fa-instagram"></i></a></li>
                                        <li><a href="#"><i class="fab fa-twitter"></i></a></li> *@
                                        <li><a href="#"><i class="far fa-envelope"></i></a></li>
                                        <li><a href="#"><i class="fab fa-linkedin-in"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End Author  -->
                    <!-- Start Comment Form Area  -->
                    <div class="axil-comment-area">

                        <!-- Start Comment Respond  -->
                        [Comments Section]
                        <div class="comment-respond">
                            <h4 class="title">Post a comment</h4>

                             <form asp-action="Create" asp-controller="Comments" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" name="blogPostSlug" value="@Model?.Slug" />
                                <input type="hidden" name="blogPostId" value="@Model?.Id"/>
                                <div class="row row-md-10">
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label for="editor">Leave a Reply</label>
                                            <textarea id="editor" class="form-control" name="Body"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-submit cerchio">
                                        <input name="submit" type="submit" id="submit" class="axil-button button-rounded" value="Post Comment">
                                    </div>
                                </div>
                            </form>
                        </div>


                        <!-- End Comment Respond  -->
                        <!-- Start Comment Area  -->
                        <div class="axil-comment-area">
                            <h4 class="title">@Model?.Comments.Count comments</h4>
                            <ul class="comment-list">
                                <!-- List Comments here -->
                                [List Comments]
                                @*                                 @foreach (Comment comment in Model!.Comments)
                                {
                                <li>@comment.Author?.FullName : @comment.Body</li>
                                }
                                *@

                                <!-- Start Single Comment  -->
                                @foreach (Comment comment in Model!.Comments)
                                {


                                    <li class="comment">
                                        <div class="comment-body">
                                            <div class="single-comment">
                                                <div class="comment-img">
                                                    <img src="@_ImageService.ConvertByteArrayToFile(null, null, DefaultImage.AuthorImage)" 
                                                    alt="Author Images" style="height:40px;width:40px">
                                                </div>
                                                <div class="comment-inner">
                                                    <h6 class="commenter">
                                                        <a class="hover-flip-item-wrapper" href="#">
                                                            <span class="hover-flip-item">
                                                                <span data-text="@comment.Author?.FullName">@comment.Author?.FullName</span>

                                                            </span>
                                                        </a>
                                                    </h6>
                                                    <div class="comment-meta">
                                                        <div class="time-spent"></div>
                                                        <div class="reply-edit">
                                                        </div>
                                                    </div>
                                                    <div class="comment-text">
                                                        <p class="b2">
                                                            @comment.Body
                                                        </p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </li>
                                    <!-- End Single Comment  -->
                                }





                            </ul>
                        </div>
                        <!-- End Comment Area  -->
                    </div>
                    <!-- End Comment Form Area  -->

                </div>
                <!-- End Blog Details  -->
            </div>
        </div>
    </div>
</div>
<!-- End Post Single Wrapper  -->
